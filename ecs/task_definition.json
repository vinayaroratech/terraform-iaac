[
    {
      "name": "${name}-task",
      "image": "${image}",
      "taskRoleArn": "${iam_role_arn}",
      "execution_role_arn": "${iam_role_arn}",
      "portMappings": [
      {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "memory": 512,
      "cpu": 256,
      "environment": [
        {
          "name": "SOME_ENVIRONMENT_VARIABLE",
          "value": "some value"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/fargate/service/${name}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]