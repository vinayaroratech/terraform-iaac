resource "aws_security_group" "main" {
  name        = "${var.name}-ecs"
  vpc_id      = var.vpc_id
  description = "Allows traffic from and to the EC2 instances of the ECS cluster"

  ingress {
    from_port   = 5000
    to_port     = 5000
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port = 0
    to_port   = 0
    protocol  = "-1"
    self      = true
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}